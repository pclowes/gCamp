<h1 class="page-header">Listing tasks
    <button type="button" class="btn btn-info pull-right"><%= link_to 'New Task', new_task_path %></button>
    <button type="button" class="btn btn-info glyphicon glyphicon-download pull-right">Download CSV</button>
</h1>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="pagination">
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
              <%= task.description %></td>
          <td>
            <button type="button" class="btn btn-info pull-right">
              <%= link_to 'Show', task %>
            </button>
          </td>
          <td>
            <button type="button" class="btn btn-info pull-right">
              <%= link_to 'Edit', edit_task_path(task) %>
            </button>
          </td>
          <td>
            <button type="button" class="btn btn-info pull-right">
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>
