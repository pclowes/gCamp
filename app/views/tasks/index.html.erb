<h1 class="page-header">Listing tasks
    <%= link_to 'New Task', new_task_path, class: "btn btn-info pull-right" %>
    <%= link_to 'Download CSV', new_task_path, class: "btn btn-info glyphicon glyphicon-download pull-right" %>
</h1>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <%= form_for(task, html: {class: "form-horizontal"}) do |f| %>
        <tr>
          <td>
            <%= task.description %>
          </td>
          <td>
            <%= link_to 'Show', task, class: "btn btn-primary pull-right"  %>
          </td>
          <td>
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-success pull-right"  %>
          </td>
          <td>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning pull-right" %>
          </td>
          <td>
              <input name="task[complete]" type="submit" value="" class="btn btn-primary glyphicon-check">
              <!-- <input id="task_complete" type="checkbox"> -->
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
