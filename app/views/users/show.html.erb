<%= page_header "#{@user.first_name} #{@user.last_name}" do %>
  <% if current_user == @user || current_user.admin? %>
    <%= link_to 'Edit', edit_user_path, class: "btn btn-info" %>
  <% end %>
<% end %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 text-right">First Name</label>
    <div class="col-sm-4">
      <%= @user.first_name %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 text-right">Last Name</label>
    <div class="col-sm-4">
        <%= @user.last_name %>
    </div>
  </div>
  <% if current_user.admin? || current_user == @user || current_user.coworker_of?(@user) %>
    <div class="form-group">
      <label class="col-sm-2 text-right">Email</label>
      <div class="col-sm-4">
          <%= mail_to @user.email %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 text-right">Pivotal Tracker Token</label>
      <% if @user.tracker_token %>
        <p class="col-md-2"><%= @user.tracker_token[1..4] + '*'*20%></p>
      <% else %>
        <p class="col-md-2">(no pivotal tracker token)</p>
      <% end %>
    </div>
  <% end %>
</div>
