<div class="tracker-stories">
  <div class="page-header row">
    <h1 class="col-md-10">Stories for <%= @project %></h1>
    <h4 class="col-md-2 count">(showing first 500)</h4>
  </div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="col-sm-5">Story</th>
        <th class="col-sm-2">Estimate</th>
        <th class="col-sm-2">Labels</th>
        <th class="col-sm-3">Current State</th>
      </tr>
    </thead>
    <tbody>
      <% @stories.each do |story| %>
      <tr>
        <td><%= link_to story[:name], "https://www.pivotaltracker.com/n/projects/#{:project_id}" %></td>
        <td><%= story[:estimate] %></td>
        <td>
          <% @labels = [] %>
          <% story[:labels].each do |label| %>
            <% @labels << label[:name] %>
          <% end %>
          <%= @labels.join(', ') %>
        </td>
        <td><%= story[:current_state] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @stories %>
</div>
