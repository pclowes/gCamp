<%= stylesheet_link_tag 'application' %>
  <body>
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div style="color:white" class="jumbotron">
      <h1><center>gCamp</center></h1>
          <p><center style="font-size:16">Your life, organized</center></p>
    </div>


<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% @images.each do |display| %>
        <%= image_tag(display, class: "img-responsive")%>
      <% end %>
      <div class="panel panel-info" hspace="20">
        <% @columns.each do |headers, contents| %>
          <div class="panel-heading">
            <h3 class="panel-title"> <%= headers %> </h3>
          </div>
          <% contents.each do |content| %>
            <div class="panel-content">
                <%= content %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
